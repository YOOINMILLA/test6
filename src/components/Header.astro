---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---
<header class="bg-black/70 backdrop-blur border-b border-indigo-800 shadow-md z-50">
  <nav class="max-w-6xl mx-auto px-6 py-4 flex justify-between items-center font-mono text-lime-200">
    <h2 class="text-xl sm:text-2xl font-semibold tracking-wider text-cyan-400 hover:text-pink-400 transition-colors">
      <a href="/">{SITE_TITLE}</a>
    </h2>
    <div class="flex gap-6 text-sm sm:text-base">
      <HeaderLink href="/" class="relative group">
        <span class="group-hover:text-yellow-300 transition-colors">Core</span>
        <span class="absolute left-0 bottom-0 w-full h-0.5 bg-yellow-300 scale-x-0 group-hover:scale-x-100 origin-left transition-transform"></span>
      </HeaderLink>
      <HeaderLink href="/blog" class="relative group">
        <span class="group-hover:text-emerald-300 transition-colors">Log</span>
        <span class="absolute left-0 bottom-0 w-full h-0.5 bg-emerald-300 scale-x-0 group-hover:scale-x-100 origin-left transition-transform"></span>
      </HeaderLink>
      <HeaderLink href="/about" class="relative group">
        <span class="group-hover:text-rose-300 transition-colors">Signal</span>
        <span class="absolute left-0 bottom-0 w-full h-0.5 bg-rose-300 scale-x-0 group-hover:scale-x-100 origin-left transition-transform"></span>
      </HeaderLink>
    </div>
  </nav>
</header>
